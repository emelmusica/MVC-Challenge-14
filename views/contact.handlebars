<div class="container mt-5">
    <h1>Contact Us</h1>
    <form class="contact-form" id="contact-form" action="/contact" method="POST">
        <div class="form-group">
            <label for="contactName" class="text-black">Name</label>
            <input type="text" class="form-control" id="contactName" name="contactName" required>
        </div>
        <div class="form-group">
            <label for="contactEmail" class="text-black">Email</label>
            <input type="email" class="form-control" id="contactEmail" name="contactEmail" required>
        </div>
        <div class="form-group">
            <label for="contactMessage" class="text-black">Message</label>
            <textarea class="form-control" id="contactMessage" name="contactMessage" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
    </form>
</div>
