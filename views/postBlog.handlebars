{{#if logged_in}}

<div class="container d-flex justify-content-center align-items-center">
  <div>
    <h1>Create a Blog Post</h1>
    <form id="create-blog-post-form" action="/api/blogRoutes/create" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" id="body" name="body" rows="4" required></textarea>
      </div>
      <div class="form-group">
        <label for="createdBy">Created By</label>
        <input type="text" class="form-control" id="createdBy" name="createdBy" required>
      </div>
      <button type="submit" class="btn btn-primary">Create Blog Post</button>
    </form>
  </div>
</div>
<script src="./js/post.js"></script>

{{else}}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <p>
      <h1>Unable to create a blog post without logging in</h1>
      </p>
      <p>
      <h1>Please login or sign up to create a blog post and share your knowledge!</h1>
      </p>
    </div>
    <div class="col-md-6">
      {{> loginForm}}
    </div>
  </div>
</div>

{{/if}}
